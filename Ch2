########## 2.1 ##########
F = 0
while F <= 100:
	C = (F - 32)* 5.0/9
	print(F, C)
	F += 10

########## 2.2 ##########
F = 0
while F <= 100:
	C = (F - 32)* 5.0/9
	C_hat = (F-30)/2
	print(F, C, C_hat)
	F += 10

